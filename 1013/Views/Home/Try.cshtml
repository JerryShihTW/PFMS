@{
    ViewData["Title"] = "Privacy Policy";
}
@using _1013.Models;

<h2>帳號清單</h2>

<table class="table">
    <thead>
        <tr>
            <th>日期</th>
            <th>金額</th>
            <th>類別</th>
            <th>備註</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.date </td>
                <td>@item.amount</td>
                <td>@item.category</td>
                <td>@item.note</td>
                <td>
                    <!-- 編輯按鈕 -->
                    <a asp-action="TryEdit" asp-route-id="@item.id" class="btn btn-primary">編輯</a>
                    <!-- 刪除按鈕 -->
                    <form asp-action="TryDelete" asp-route-id="@item.id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('確定要刪除這個帳號嗎？');">刪除</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
