@model _1013.Models.Budget

@{
    ViewData["Title"] = "編輯預算";
}

<h2>編輯預算</h2>

<form asp-action="EditBudget" method="post">
    @Html.AntiForgeryToken() <!-- 防範 CSRF 攻擊 -->

    <div class="form-group">
        <label asp-for="amount"></label>
        <input asp-for="amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="startdate"></label>
        <input asp-for="startdate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="enddate"></label>
        <input asp-for="enddate" class="form-control" />
    </div>


    <input type="hidden" asp-for="id" /> <!-- 確保 ID 被傳送 -->

    <button type="submit" class="btn btn-success">保存變更</button>
    <a asp-action="BudgetList" class="btn btn-secondary">取消</a>
</form>